<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forum.dao.UserDao">
    <!--添加用户-->
    <insert id="addUser" parameterType="User">
      insert into user(username,password,email,heading)
          values(#{user.username},#{user.password},#{user.email},#{user.heading})
    </insert>
    <!--通过用户ID查找用户-->
    <select id="findUserById" resultType="User">
        select * from user where user_id=#{userId}
    </select>
    <select id="findUserByName" resultType="User">
        select *from user where username=#{username}
    </select>
    <select id="findUserByEmail" resultType="User">
        select *from user where email=#{email}
    </select>
    <update id="updateUserInfo">
        update user set username=#{username} , password=#{password} where user_id=#{userId}
    </update>
</mapper>